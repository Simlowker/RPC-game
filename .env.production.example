# Production Environment Configuration
# Copy this to .env.production and update with your values

# Network Configuration
VITE_NETWORK=mainnet-beta

# RPC Endpoints (use a premium provider for production)
# Option 1: Helius (Recommended)
# VITE_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Option 2: QuickNode
# VITE_RPC_URL=https://YOUR_ENDPOINT.quiknode.pro/YOUR_KEY/

# Option 3: Alchemy
# VITE_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY

# Option 4: Default (not recommended for production)
VITE_RPC_URL=https://api.mainnet-beta.solana.com

# Program IDs (will be updated after deployment)
VITE_PROGRAM_ID=YOUR_MAINNET_PROGRAM_ID
VITE_GAMBA_PROGRAM_ID=GambaXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Optional: Analytics and Monitoring
# VITE_GA_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://YOUR_KEY@sentry.io/YOUR_PROJECT

# Optional: Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true